{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}


<p class="loginhere" style="-webkit-text-fill-color: #2c4762;margin-left: 100px;margin-top: -50Px">
    Already using Scrumify?    <a   class="btn btn-success" value="Sign up here"   style="background: linear-gradient(to bottom left , #22c1c3 , #626970  );font-family:'Calibri Light';-webkit-text-fill-color: #FFFFFF; margin-left: 40px;" href="{{ path('fos_user_security_login') }}">Sign in</a>
</p>

<div style="background-color: #FFFFFF;padding: 40Px;alignment: top;">
    <div class="text-gray">
        <p class="text-gray" style="font-weight: bold">Reset password   </p>
        <p class="text-gray"> Reset your scrumify account password</p>
    </div>



    <div class="col-lg-12">
        <div class="form-group">

            {{ form_widget(form.current_password, {'attr': {'class': 'form-control form-control-lg ','placeholder':'Current Password'}}) }}
            <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>

        </div>
    </div>
    <div class="col-lg-12">
        <div class="form-group">

            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control form-control-lg ','placeholder':'New  password'}}) }}
        </div>
    </div>
    <div class="col-lg-12">
        <div class="form-group">

            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control form-control-lg ','placeholder':'Repeat your new password'}}) }}
        </div>
    </div>

    <div class="col-lg-12">
        <div class="form-group">

            <input type="submit" name="_submit" id="submit" class="btn btn-success btn-lg btn-block" class="form-submit" value="Change Password" style="background-color: #16CABD;" />
        </div>
    </div>
    {{ form_end(form) }}



</div>




