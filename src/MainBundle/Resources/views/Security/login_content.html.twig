{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form action="{{ path("fos_user_security_login") }}" method="post"  id="sign-in-form">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    {% block title  %}<h1></h1> {% endblock %}
    {%  block content %}
    {% endblock %}
    {% block content1 %}
        <div class="p-5 mt-5">
            <img src="assets/img/basic/logo.png" alt=""/>
        </div>
        <div class="p-5">
            <h3>Sign in</h3>
            <p>Hey Soldier welcome back signin now there is lot of
                new stuff waiting
                for you</p>
            <div class="form-group has-icon"><i class="icon-envelope-o"></i>
                <input type="text" class="form-control form-control-lg" id="username"
                       placeholder="Username" value="{{ last_username }}" required="required" autocomplete="username" >
            </div>
            <div class="form-group has-icon"><i class="icon-user-secret"></i>
                <input type="password" class="form-control form-control-lg" id="password" name="_password" required="required" autocomplete="current-password"
                       placeholder="Password">
            </div>
            <p class="forgot-password">Forgot your password?</p>

            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            <input type="submit" class="btn btn-primary btn-lg btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }} ">
        </div>
    {% endblock %}




</form>
