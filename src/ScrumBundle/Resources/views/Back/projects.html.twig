{%  block forumlink %}
    <li class="treeview no-b"><a href="{{ path('_display_back_questions') }}">
            <i class="icon icon-question_answer blue-text s-18"></i>
            <span>Forum</span>
        </a>

    </li>
{% endblock %}
 {% block contents %}
 {% block items %}
    <div class="row" style="width: 400%">
        <div class="col-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title pt-4">Projects on Scrumify</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input name="table_search" class="form-control float-right" placeholder="Search"
                                   type="text">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-secondary"><i class="icon-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Date of creation</th>
                            <th>Due date</th>
                            <th>State</th>

                        </tr>
                        {% for pp in pp %}
                        <tr>
                            <td>{{ pp.id}}</td>
                            <td>{{ pp.name }}</td>
                            <td>{{ pp.description }}</td>
                            <td>{{ pp.created  | date('d-M-Y')}}</td>
                            <td>{{ pp.duedate | date('d-M-Y')}}</td>
                            {% if pp.etat==1 %}
                            <td><span class="badge text-white bg-green" style="color:green">Active</span>
                            {% else %}
                            <td><span class="badge text-white bg-red" style="color:red">Disabled</span>

                                {% endif %}
                            </td>
                            {% if pp.etat==0 %}

                            <td>


                            <a href="{{ path('desarchiverProject', { 'id': pp.id })}}" class="badge text-white bg-yellow" style="color:yellow">

                          <span>Activate</span>
                            </a>
                                {% endif %}

                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% endblock %}