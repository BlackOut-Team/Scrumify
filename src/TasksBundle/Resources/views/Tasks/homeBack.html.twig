{% extends'baseF.html.twig' %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block contents %}

    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"> Tasks </h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input name="table_search" class="form-control float-right" placeholder="Search"
                                   type="text">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-secondary"><i class="icon-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">

                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <th style="width: 10px">ID</th>
                            <th>Task</th>
                            <th>Progress</th>
                            <th style="width: 40px">Status</th>
                        </tr>
                        {% for pp in pp %}
                        <tr>
                            <td>{{ pp.id}}</td>
                            <td>{{ pp.title }}</td>
                            {%  if pp.status=="To do" %}
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 0%"></div>
                                </div>
                            </td>
                                {% elseif pp.status=="Doing" %}
                                    <td>
                                        <div class="progress progress-xs">
                                            <div class="progress-bar progress-bar-danger" style="width: 50%"></div>
                                        </div>
                                    </td>
                                {% elseif pp.status=="Done" %}
                                    <td>
                                        <div class="progress progress-xs">
                                            <div class="progress-bar progress-bar-danger" style="width: 100%"></div>
                                        </div>
                                    </td>
                                {% elseif pp.status=="Block" %}
                                    <td>
                                        <span class="badge text-white bg-red">Problem</span>
                                    </td>
                            {% endif %}

                            {% if pp.etat==0 %}

                            <td><span class="badge text-white bg-green" >Active</span>
                                {% else %}
                            <td> <a class="badge text-white bg-red"  href="{{ path('desarchiver', { 'id': pp.id }) }}">Disabled</a>


                                {% endif %}
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
{% endblock %}
