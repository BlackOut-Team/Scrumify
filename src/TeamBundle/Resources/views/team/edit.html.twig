{% extends'baseF.html.twig' %}


{% block contents %}

    {% block row %}

        <ul class="nav responsive-tab nav-material nav-material-white" id="v-pills-tab">
            <li>
                <a class="nav-link active" id="v-pills-1-tab" data-toggle="pill" href="#v--1">
                    <i class="icon icon-group"></i>Teams</a>
            </li>
        </ul>
        <div>
            <a class="btn btn-primary" href="{{ path('pdfexample') }}">Export to PDF</a>
            <a data-toggle="modal" data-target="#project-add-modal"><i class="icon icon-plus" style="-webkit-text-fill-color: #FFFFFF;font-size: 24px;letter-spacing: 10px;" ></i></a>

        </div>
    {% endblock %}


    {% block items %}
            {{ form_start(form) }}


<div class="animatedParent animateOnce" style="width: 750%">
    <div class="container-fluid my-3">
        <div class="row">
            <div class="col-md-7">
                <div class="card" >
                    <div class="card-body b-b">
                        <h4>Edit team name</h4>
                        <form class="form-material">
                            <div class="body">
                                <div class="row clearfix">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <label class="col-3">Team name</label>
                                                {{ form_widget(form.name, {'attr': {'class': 'form-control col'}}) }}
                                            </div>
                                        </div>




                                    </div>
                                </div>




                                <div class="card-bottom">

                                    {{ form_widget(form.Modifier, {'attr': {'class': 'btn btn-primary'}}) }}

                                </div>
                                {{ form_end(form) }}

                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>






    {% endblock %}
{% endblock %}
